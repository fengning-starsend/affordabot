{
  "issue-first": {
    "type": "workflow",
    "enforcement": "suggest",
    "priority": "critical",
    "beadsIntegration": {
      "requiresIssue": false,
      "updatesStatus": true,
      "createsIssues": true
    },
    "promptTriggers": {
      "keywords": [
        "track work",
        "create issue",
        "beads issue",
        "file issue",
        "track this"
      ],
      "intentPatterns": [
        "(create|make|file)\\s+(issue|task|bug|tracking)",
        "track.*work",
        "beads.*issue",
        "issue.*tracking"
      ],
      "beadsKeywords": [
        "track",
        "issue",
        "beads"
      ]
    }
  },
  "skill-creator": {
    "type": "meta",
    "enforcement": "suggest",
    "priority": "medium",
    "promptTriggers": {
      "keywords": [
        "create skill",
        "new skill",
        "make a skill",
        "create a skill",
        "implement skill",
        "need a skill"
      ],
      "intentPatterns": [
        "(create|make|implement|need).*skill",
        "new.*skill",
        "skill.*for"
      ]
    }
  },
  "lint-check": {
    "type": "workflow",
    "enforcement": "suggest",
    "priority": "low",
    "promptTriggers": {
      "keywords": [
        "lint my code",
        "check formatting",
        "run linters",
        "check code quality",
        "lint check"
      ],
      "intentPatterns": [
        "lint.*code",
        "check.*(formatting|quality|linting)",
        "run.*lint"
      ]
    }
  }
}
