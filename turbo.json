{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "^build"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**"
            ]
        },
        "start": {
            "dependsOn": [
                "^build"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        }
    }
}